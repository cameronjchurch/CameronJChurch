@page
@model CameronJChurch.Areas.Identity.Pages.Account.Manage.UsersModel
@{
    ViewData["Title"] = "Users";
}

<h1>@ViewData["Title"]</h1>

<div class="col">
    <div class="row">        
        <form method="post">
            <table class="table">
                <thead>
                    <tr>
                        <th>User</th>
                        <th>Delete</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model.Users)
                    {
                        var data = new Dictionary<string, string> { { "userId", @user.Id } };
                        <tr>
                            <td>@user.UserName</td>
                            @if (User.Identity.Name != user.UserName)
                            {
                                <td><button type="submit" name="id" asp-all-route-data="@data" asp-page-handler="delete" class="btn btn-danger btn-rounded btn-sm">Delete</button></td>
                            }
                        </tr>
                    }
                </tbody>
            </table>
        </form>
    </div>
    <div class="row">
        <form method="post">
            <h4>Add a user</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Add</button>
        </form>
    </div>
</div>
